@startuml

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title System Context Diagram for TripTop
SHOW_PERSON_PORTRAIT()
' Define Users (at the top)
Person(Traveler, "Traveler", "Plans, books & modifies trips")
Person(TravelAgent, "Travel Agent", "Supports travelers with bookings")

' Define System (center)
System(TripTop, "TripTop Web Application", "Manages trip bookings & user interactions")

' Define External Systems (bottom)
System_Ext(Booking, "Booking.com / Airbnb API", "Handles accommodation bookings")
System_Ext(Transport, "NS / Deutsche Bahn / KLM API", "Provides transportation options")
System_Ext(CarRent, "Sixt / Hertz API", "Car rental services")
System_Ext(Activities, "Tripadvisor / GetYourGuide API", "Offers activities and experiences")
System_Ext(Food, "Takeaway / Eet.nu API", "Food delivery and restaurant bookings")
System_Ext(IdProvider, "Google / Microsoft / Airbnb login Provider", "Handles authentication and user login")

' Positioning
Traveler -[hidden]-> TripTop
TravelAgent -[hidden]-> TripTop
TripTop -[hidden]-> Booking
TripTop -[hidden]-> Transport
TripTop -[hidden]-> CarRent
TripTop -[hidden]-> Activities
TripTop -[hidden]-> Food
TripTop -[hidden]-> IdProvider

' Relationships
Traveler -> TripTop : "Plans, books, changes travel plans"
TravelAgent -> TripTop : "Supports travelers when asked"

TripTop -down-> Booking : "Books accommodations"
TripTop -down-> Transport : "Books transport"
TripTop -down-> CarRent : "Books car rental"
TripTop -down-> Activities : "Books activities"
TripTop -down-> Food : "Orders food"
TripTop -down-> IdProvider : "Login authentication"

@enduml